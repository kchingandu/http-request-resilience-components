{
  "name": "es6-boilerplate",
  "version": "1.0.0",
  "description": "Front-end project boilerplate with es6 build tools. Includes babel, webpack, and npm scripts.",
  "main": "index.js",
  "scripts": {
    "start": "npm run startWebpack & npm run startBackend",
    "test": "mocha --recursive --watch --compilers js:babel-core/register \"./src/**/*.test.js\"",
    "startWebpack": "webpack-dev-server -d --progress --colors",
    "watch": "webpack -w -d",
    "build": "webpack -p",
    "startBackend": "node ./src/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timwis/es6-boilerplate.git"
  },
  "author": "timwis <tim@timwis.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timwis/es6-boilerplate/issues"
  },
  "homepage": "https://github.com/timwis/es6-boilerplate#readme",
  "devDependencies": {
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "chai": "^3.5.0",
    "expect": "^1.20.2",
    "mocha": "^3.1.0",
    "sinon": "^1.17.6",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  }
}
